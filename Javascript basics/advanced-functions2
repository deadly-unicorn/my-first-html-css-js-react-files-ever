function findNumber2(list1,numSearch1,list2,numSearch2){
    if (list1.length>=list2.length){
        var listLength=list1.length
        }
    else {
        var listLength=list2.length
    }
    for (let i=0;i !==listLength;i++){
        if (list1[i]===numSearch1){
            console.log("Your number is in the 1st list! Congratulations")
            console.log("It is the "+(1+i)+"th item")
            a=1
        }
        if(list2[i]===numSearch2){
            console.log("Your number is in the 2nd list! Congratulations")
            console.log("It is the "+(1+i)+"th item")
            b=1
        }
    }
}
findNumber2(list1,42,list2,42) ///same results less code less space used.. ///The most efficient still would be to write the function 2 times and not use 4 inputs.

