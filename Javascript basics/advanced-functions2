function stonedAtMidnight(text){
    for (let i=0;i<2;i++,text++){
        console.log(i+" time(s) stoned "+text)
    }
}
stonedAtMidnight(2)

console.log("~~~~~~")

function stonedAtMidnight4(exercise,times){
    for (let i=1;i<=times;i++){
        console.log(i+" "+exercise+" done")
    }
    console.log("Done!")
    console.log("~~~~")
}

stonedAtMidnight4("Jump(s) off the wall",2)
stonedAtMidnight4("spider cool(s)",3)

function drawLine(length){
    console.log("^")
    for (let i=0;i<length;i++){
        console.log("|")
    }
}
drawLine(5)
var a=0
var b=0

function findNumber(list1,numSearch1,list2,numSearch2){
    if (list1.length>=list2.length){
        for (let i=0;i !==list1.length;i++){
            if (list1[i]===numSearch1){
                console.log("Your number is in the 1st list! Congratulations")
                console.log("It is the "+(1+i)+"th item")
                a=1
            }
            if(list2[i]===numSearch2){
                console.log("Your number is in the 2nd list! Congratulations")
                console.log("It is the "+(1+i)+"th item")
                b=1
            }
        }
    }
    else{
        for (let i=0;i !==list1.length;i++){
            if (list1[i]===numSearch1){
                console.log("Your number is in the 1st list! Congratulations")
                console.log("It is the "+(1+i)+"th item")
                a=1
            }
            if(list2[i]===numSearch2){
                console.log("Your number is in the 2nd list! Congratulations")
                console.log("It is the "+(1+i)+"th item")
                b=1
            }
    }
    }
    if(a+b!==2){
    console.log("there's some number not in a list you wanted to search")
    }
    }

list1=[42,23,11,09,12,42,55,66,1123]
